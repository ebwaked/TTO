@{
    ViewBag.Title = "Home Page";
}

<style>
    img.displayed {
        display: block;
        margin-left: auto;
        margin-right: auto; 
    }
</style>
<div class="row">
    <div class="jumbotron rcorners2">
        <center>
            <h1>The Triad Outsiders</h1>
        </center>
        <center>
            Adult Developmental Football Orginization based in High Point, North Carolina.
            <br />
            2016 CCFL CHAMPIONS
            <br />
            #OsUp #TTO #2016 #RingChasin
            <br />
            <img src="~/Images/outsiders.jpg" />
            <img src="~/Images/trophy.jpg" />
        </center>
    </div>
</div>
<div class="row">
    

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="displayed" src="~/Images/coaches_mvps.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/banner.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/community.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/OsUp.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/owner.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/teamBeforeChampionship.jpg" />
            </div>

            <div class="item">
                <img class="displayed" src="~/Images/winning.jpg" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



</div>

<div class="row rcorners2">
    <div class="col-md-4 rcorners2" style="background-color: #eeeeee">
        <h2>Game Film</h2>
        <p>
            Watch film with of our games. To view you must be logged in.
        </p>
        <p><a class="btn btn-default" href="~/Home/Film">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4 rcorners2" style="background-color: #eeeeee">
        <h2>Team Roster</h2>
        <p>View our players and staff. Jersey numbers, height and weight of our players. </p>
        <p><a class="btn btn-default" href="~/Home/Roster">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4 rcorners2" style="background-color: #eeeeee">
        <h2>Schedule</h2>
        <p>Check out what teams we will go through on our way to a ring!</p>
        <p><a class="btn btn-default" href="Home/Schedule">2016 &raquo;</a></p>
    </div>
</div>